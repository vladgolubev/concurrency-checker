{
  "name": "@shelf/shelf-api-xxx",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/shelfio/shelf-api-xxx#readme",
  "repository": "shelfio/shelf-api-xxx",
  "license": "UNLICENSED",
  "author": "Vitalii Sikora",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf lib/ && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts'",
    "coverage": "yarn test --coverage",
    "deploy": "serverless deploy --stage $ENVIRONMENT --package .serverless",
    "lint": "eslint . --fix --ext .js,.json,.ts --quiet",
    "lint:ci": "eslint . --ext .js,.json,.ts --quiet",
    "package": "serverless package --stage $ENVIRONMENT",
    "test": "TZ=UTC jest src",
    "test:integration": "TZ=UTC jest api-tests",
    "test:integration:staging": "ENVIRONMENT=staging API_HOST=api.gsstaging.net yarn test:integration",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{html,md,yml,graphql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/common-mocks.js"
    ],
    "testEnvironment": "node"
  },
  "resolutions": {
    "ajv": "6.12.5",
    "aws-sdk": "2.721.0",
    "lodash": "4.17.20"
  },
  "dependencies": {
    "@shelf/middy-base": "0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/node": "7.10.5",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@shelf/aws-sdk-helpers": "3.13.101",
    "@shelf/eslint-config": "0.23.1",
    "@shelf/prettier-config": "0.0.7",
    "@types/jest": "26.0.14",
    "@types/node": "12",
    "aws-sdk": "2.721.0",
    "babel-jest": "26.3.0",
    "eslint": "7.11.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-junit": "11.1.0",
    "lint-staged": "10.4.2",
    "prettier": "2.1.2",
    "serverless-associate-waf": "1.2.1",
    "serverless-iam-roles-per-function": "2.0.2",
    "typescript": "4.0.3"
  }
}
