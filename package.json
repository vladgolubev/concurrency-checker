{
  "name": "@shelf/shelf-api-xxx",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/shelfio/shelf-api-xxx#readme",
  "repository": "shelfio/shelf-api-xxx",
  "license": "UNLICENSED",
  "author": "Vitalii Sikora",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf lib/ && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts'",
    "coverage": "yarn test --coverage",
    "deploy": "serverless deploy --package .serverless",
    "lint": "eslint . --fix --ext .js,.json,.ts --quiet",
    "lint:ci": "eslint . --ext .js,.json,.ts --quiet",
    "package": "serverless package",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{html,md,yml,graphql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "extends": "@shelf/babel-config/backend"
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/schema.ts",
      "!src/**/types.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/common-mocks.js"
    ],
    "testEnvironment": "node"
  },
  "resolutions": {
    "ajv": "6.12.5",
    "aws-sdk": "2.804.0",
    "lodash": "4.17.21"
  },
  "dependencies": {
    "@shelf/middy-base": "1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.14",
    "@babel/core": "7.13.15",
    "@babel/node": "7.13.13",
    "@shelf/aws-sdk-helpers": "4.3.0",
    "@shelf/babel-config": "0.1.1",
    "@shelf/eslint-config": "1.0.0",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.0.6",
    "@types/jest": "26.0.23",
    "@types/node": "14",
    "aws-sdk": "2.804.0",
    "babel-jest": "26.6.3",
    "eslint": "7.23.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "serverless-associate-waf": "1.2.1",
    "serverless-iam-roles-per-function": "3.2.0-e97ab49",
    "serverless-tag-cloud-watch-log-groups": "1.2.5",
    "typescript": "4.2.4"
  }
}
